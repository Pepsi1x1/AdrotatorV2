<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdRotator">

    <Style TargetType="local:AdRotatorControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AdRotatorControl">
                    <Viewbox x:Name="AdRotatorRoot" Stretch="None" StretchDirection="Both" Width="{TemplateBinding AdWidth}" Height="{TemplateBinding AdHeight}">
                        <Viewbox.RenderTransform>
                            <CompositeTransform/>
                        </Viewbox.RenderTransform>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
